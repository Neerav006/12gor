<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:padding="10dp"
        android:id="@+id/tvMemberName"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingStart="10dp"
        android:layout_below="@+id/tvMemberName"
        android:id="@+id/tvMemberCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:padding="10dp"
        android:layout_below="@+id/tvMemberCode"
        android:id="@+id/tvDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="10dp"
        tools:text="Mem No: 123"
        android:layout_below="@+id/tvDOB"
        android:id="@+id/tvMemNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_below="@+id/tvDOB"
        android:padding="10dp"
        android:id="@+id/tvStudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/tvVillageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/ivView"
        android:layout_below="@+id/tvMemberCode"
        android:padding="10dp"
        android:src="@drawable/ic_view_list_deep_purple_400_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivEdit"
        android:padding="10dp"
        android:layout_toStartOf="@+id/ivView"
        android:layout_below="@+id/tvMemberCode"
        android:src="@drawable/ic_mode_edit_green_500_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivEditProfile"
        android:padding="10dp"
        android:layout_toStartOf="@+id/ivEdit"
        android:layout_below="@+id/tvMemberCode"
        android:src="@drawable/ic_people_yellow_800_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>